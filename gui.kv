# from kivy.app import App
# from kivy.lang import Builder

BoxLayout:
    orientation: 'vertical'
    Label:
        id: current_trip_label
        text: app.current_trip_location()
        font_size: 21
        colour: (1, 1, 0.5, 1)
    BoxLayout:
        orientation: 'horizontal'
        Spinner:
            id: country_spinner
            text: app.current_state
            # Values takes a list
            values: app.country_names
            # When text is changed, run change_state
            on_text: app.change_state(self.text)
        TextInput:
            readonly: True
            id: current_country_input
            text:
            on_text_validate: app.convert_forward()
            multiline: False
    BoxLayout:
        orientation: 'horizontal'
        Label:
            id: home_country_label
            text: app.home_country
        TextInput:
            readonly: True
            id: home_country_input
            text:
            on_text_validate: app.convert_backward()
            multiline: False
    Label:
        id: date_label
        text: app.todays_date_label()
    BoxLayout:
        orientation: 'horizontal'
        Label:
            id: status_label
            text: app.status_label()
        Button:
            id: update_button
            text: "Update Currency"
            on_press: app.update_button_press()
